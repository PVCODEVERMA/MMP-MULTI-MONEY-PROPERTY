NODE_ENV=production
PORT=8080
HOST=0.0.0.0

MONGODB_URI=mongodb+srv://<user>:<pass>@cluster.example.mongodb.net/mmp

JWT_SECRET=prod-long-entropy-secret
JWT_REFRESH_SECRET=prod-long-entropy-refresh-secret
ACCESS_TTL_SEC=900
REFRESH_TTL_SEC=2592000

# Must be your real domain; cookies are sent only to this site
COOKIE_DOMAIN=yourdomain.com

# Exact origin required for credentialed CORS (no "*")
FRONTEND_URL=https://app.yourdomain.com
ALLOWED_ORIGINS=https://app.yourdomain.com

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

BCRYPT_ROUNDS=12

CLOUDINARY_CLOUD_NAME=prod_cloud
CLOUDINARY_API_KEY=prod_key
CLOUDINARY_API_SECRET=prod_secret

PE_CLIENT_ID=prod_phone_email_client_id
PE_REDIRECT_URL=https://app.yourdomain.com/login/success
